{
    "compilerOptions": {
        "target": "es6",
        // "module": "commonjs",
        "module": "ESNext",            // Use modern ES module syntax
        "moduleResolution": "Node",   // Node.js resolution for imports
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "prisma/seed.ts"],
    "exclude": ["node_modules"]
}