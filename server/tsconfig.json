{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",          
        "moduleResolution": "NodeNext",  
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "prisma/seed.ts"],
    "exclude": ["node_modules"]
}